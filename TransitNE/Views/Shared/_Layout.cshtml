<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - North East Transit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TransitNE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/StyleSheet.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RouteInformation"
                                asp-action="Index">Route Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RouteInformation"
                                asp-action="RouteMap">Route Maps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ticketing"
                                asp-action="Index">Tickets</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="landing-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <div class="title">
            <div class="arrow-icon"></div>
        </div>
        <div class="text-link-list">
            <div class="list-title">
                <div class="text-strong">
                    <div class="sub-text-strong">Use</div>
                </div>
            </div>
            <div class="user-guide">
                <div class="list-item">User Guide</div>
            </div>
            <div class="septa-site">
                <div class="list-item">Septa Site</div>
            </div>
            <div class="nj-transit-site">
                <div class="list-item">NJ Transit Site</div>
            </div>
            <div class="patco-site">
                <div class="list-item">Patco Site</div>
            </div>
            <div class="bottom-text-list-item"></div>
        </div>
        <div class="text-link-list">
            <div class="list-title">
                <div class="text-strong">
                    <div class="sub-text-strong">Explore</div>
                </div>
            </div>
            <div class="schedule">
                <div class="list-item">Schedules</div>
            </div>
            <div class="ticketing">
                <div class="list-item">Ticketing</div>
            </div>
            <div class="route-maps">
                <div class="list-item">Route Maps</div>
            </div>
            <div class="trip-planner">
                <div class="list-item">Trip Planner</div>
            </div>
            <div class="text-list-item"></div>
        </div>
        <div class="text-link-list">
            <div class="list-title">
                <div class="text-strong">
                    <div class="sub-text-strong">Resources</div>
                </div>
            </div>
            <div class="blog">
                <div class="list-item">Blog</div>
            </div>
            <div class="contact">
                <div class="list-item">Contact</div>
            </div>
            <div class="support">
                <div class="list-item">Support</div>
            </div>
            <div class="developers">
                <div class="list-item">Developers</div>
            </div>
        <div class="bottom-text-list-item"></div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
