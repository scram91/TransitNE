@{
    ViewData["Title"] = "PATCO Route Maps";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="styleguide.css" />
    <link rel="stylesheet" href="~/TransitNE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="style.css" />
</head>
<body>
    <div class="hero-image">
        <div class="text-content-title">
            <div class="title">PATCO Route Maps</div>
            <div class="subtitle">Select a different Agency for more information</div>
        </div>
    </div>
    <div class="frame">
        <div class="image-panel">
            <img class="septa-text-svg" src="~/Images/PATCO_Line.png" width="400px" height="400px" />
        </div>
        <div class="septa-button">
            <div class="state-layer">
                <button type="button" onclick="location.href='@Url.Action("SeptaRouteMap", "SeptaRouteMap")'">NJ Transit</button>
            </div>
        </div>
        <div class="nj-button">
            <div class="state-layer">
                <button type="button" onclick="location.href='@Url.Action("NJTransitRouteMap", "NJTransitRouteMap")'">PATCO</button>
            </div>
        </div>
        <div class="patco-rail-map">
            <div class="heading">PATCO Rail Map</div>
            <div class="subheading">
                <img class="rail-map-image" src="~/Images/PatcoMap/PATCO_LineMap.jpg" width="400px" height="400px"/>
            </div>
        </div>
    </div>
</body>
</html>