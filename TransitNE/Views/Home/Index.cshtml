@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="styleguide.css" />
    <link rel="stylesheet" href="style.css" />
</head>
<body>
    <div class="hero-image">
        <div class="text-content-title">
            <div class="title">Transit NE</div>
            <div class="subtitle">Slogan TBD</div>
        </div>
    </div>
        <div class="panel-image-double">
            <div class="left-image"></div>
            <div class="right-image"></div>
        </div>
        <div class="card-grid-icon">
            <div class="text-content-heading">
                <div class="heading">Pertinent Information</div>
                <div class="subheading">Important user information</div>
            </div>
            <div class="cards">
                <div class="card">
                    <div class="body">
                        <div class="text">
                            <div class="card-header">Route Delays</div>
                            <p class="body-text-for">This section will list routes that will be delayed in the next 24 hours.</p>
                        </div>
                    </div>
                </div>
                <div class="card-1">
                    <div class="today">
                        <img class="card-1-img" src="img/today.svg" />
                    </div>
                    <div class="card-1-body">
                        <div class="card-1-text">
                            <div class="card-header">Updated Schedules</div>
                            <p class="body-text-for">This section will display any routes that have updated their schedules.</p>
                        </div>
                    </div>
                </div>
                <div class="card-2">
                    <div class="info">
                        <img class="card-2-img" src="img/info.svg" />
                    </div>
                    <div class="body">
                        <div class="card-2-text">
                            <div class="card-header">Fare Changes</div>
                            <p class="body-text-for">
                                This section will display any routes where a fare has changed. <br /><br />*NOTE: this may change
                                depending on the data I can receive from SEPTA and NJ Transit.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>