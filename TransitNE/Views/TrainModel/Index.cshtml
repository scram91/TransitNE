@model IEnumerable<TransitNE.Models.TrainModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trainno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.currentstop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nextstop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.line)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.consist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.late)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SOURCE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRACK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRACK_CHANGE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trainno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.currentstop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nextstop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.line)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.consist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.late)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOURCE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRACK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRACK_CHANGE)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
